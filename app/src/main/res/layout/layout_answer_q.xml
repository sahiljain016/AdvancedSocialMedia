<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_300sdp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        app:cardElevation="@dimen/_3sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_5sdp">

            <TextView
                android:id="@+id/TV_CHARACTER_NO_Q"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:fontFamily="@font/capriola"
                android:text="gsdiogsigisg"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/ET_ANSWER_Q"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@null"
                android:fontFamily="@font/capriola"
                android:hint="Type Here......"
                android:inputType="textMultiLine"
                android:maxLength="150"
                android:scrollbars="vertical"
                android:scrollHorizontally="false"
                android:textColor="#6A6A6A"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/TV_CHARACTER_NO_Q" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/ATV_OPTION_1_Q"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:background="@drawable/border_rounded_grey_20sdp"
                android:fontFamily="@font/capriola"
                android:gravity="center"
                android:maxLines="2"
                android:padding="@dimen/_7sdp"
                android:tag="unselected"
                android:text="Absolutely"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:sizeToFit="true" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/ATV_OPTION_2_Q"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:background="@drawable/border_rounded_grey_20sdp"
                android:fontFamily="@font/capriola"
                android:gravity="center"
                android:maxLines="2"
                android:padding="@dimen/_7sdp"
                android:tag="unselected"
                android:text="Absolutely"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ATV_OPTION_1_Q"
                app:sizeToFit="true" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/ATV_OPTION_3_Q"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:background="@drawable/border_rounded_grey_20sdp"
                android:fontFamily="@font/capriola"
                android:gravity="center"
                android:maxLines="2"
                android:padding="@dimen/_7sdp"
                android:tag="unselected"
                android:text="Absolutely"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ATV_OPTION_2_Q"
                app:sizeToFit="true" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/ATV_OPTION_4_Q"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:background="@drawable/border_rounded_grey_20sdp"
                android:fontFamily="@font/capriola"
                android:gravity="center"
                android:maxLines="2"
                android:padding="@dimen/_7sdp"
                android:tag="unselected"
                android:text="Absolutely"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ATV_OPTION_3_Q"
                app:sizeToFit="true" />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>