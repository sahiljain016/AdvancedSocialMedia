<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/rounded_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/TV_ANCHOR_TITLE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_toStartOf="@id/V_MARGIN_ANCHOR"
            android:ellipsize="end"
            android:fontFamily="@font/capriola"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textColorLink="#00FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/TV_ANCHOR_MESSAGE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TV_ANCHOR_TITLE"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_toStartOf="@id/V_MARGIN_ANCHOR"
            android:ellipsize="end"
            android:fontFamily="@font/capriola"
            android:maxLines="1"
            android:textColor="#A3A3A3"
            android:textColorLink="#00FFFFFF"
            android:textSize="14sp" />


        <ImageView
            android:id="@+id/IV_GO_TO_ANCHOR"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_15sdp"
            android:gravity="center"
            android:src="@drawable/ic_message_send"
            android:textAlignment="center"
            android:textColor="@color/home_color_1"
            android:textSize="20sp" />

        <View
            android:id="@+id/V_MARGIN_ANCHOR"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_alignTop="@id/TV_ANCHOR_TITLE"
            android:layout_alignBottom="@id/TV_ANCHOR_MESSAGE"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_toStartOf="@id/IV_GO_TO_ANCHOR"
            android:background="@color/black" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>