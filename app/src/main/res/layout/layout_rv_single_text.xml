<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_25sdp"
        app:cardElevation="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <me.grantland.widget.AutofitTextView
                android:id="@+id/ATV_SERIAL_NO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_6sdp"/>


            <EditText
                android:id="@+id/ET_ML1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"

                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_toStartOf="@id/IV_GO_TO_ANCHOR"
                android:layout_toEndOf="@id/ATV_SERIAL_NO"
                android:hint="Type custom message here!"

                android:textColor="@color/black"
                android:textColorLink="#00FFFFFF"
                android:textSize="16sp" />


            <me.grantland.widget.AutofitTextView
                android:id="@+id/IV_GO_TO_ANCHOR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/_10sdp"
                android:gravity="center"
                android:text="send"
                android:textAlignment="center"
                android:textColor="@color/home_color_1"
                android:textSize="20sp" />
            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
               android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
            android:layout_alignBottom="@id/ET_ML1"
                android:layout_toEndOf="@id/ET_ML1"
                android:background="@color/black"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>