<?xml version="1.0" encoding="utf-8"?>

<com.gic.memorableplaces.utils.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:sl_is_shadow_bottom="false"
    app:sl_is_shadow_end="false"
    app:sl_is_shadow_start="false"
    app:sl_is_shadow_top="true"
    app:sl_shadow_color="#A3A3A3"
    app:sl_shadow_angle="90"
    >

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/CL_MBN"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_3sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingBottom="@dimen/_3sdp"
        app:layoutDescription="@xml/mbn_scene">


        <View
            android:id="@+id/V_BOTTOM_INDICATOR_MBN"
            android:layout_width="0dp"
            android:layout_height="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_17sdp"
            android:layout_marginEnd="@dimen/_17sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:background="@drawable/rounded_white_background"
            android:backgroundTint="#A3A3A3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/G_2_MBN"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/IV_HOME_MBN"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_white_heart_outline"
            android:tint="#A5A5A5"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/G_2_MBN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />

        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/IFB_HOME_MBN"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_home_filled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/G_2_MBN"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/G_3_MBN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/IFB_FRIENDS_MBN"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_friends"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/G_3_MBN"
            app:layout_constraintStart_toEndOf="@id/G_2_MBN"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/G_4_MBN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75" />

        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/IFB_MESSAGES_MBN"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_messages"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/G_4_MBN"
            app:layout_constraintStart_toEndOf="@id/G_3_MBN"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/IFB_USER_MBN"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_user"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/G_4_MBN"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.motion.widget.MotionLayout>

</com.gic.memorableplaces.utils.ShadowLayout>
