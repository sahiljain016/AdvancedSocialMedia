        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/CV_MAIN_FF_EXP"
        app:layout_constraintEnd_toEndOf="@id/CV_MAIN_FF_EXP"
        app:layout_constraintStart_toStartOf="@id/CV_MAIN_FF_EXP"
        app:layout_constraintTop_toTopOf="@id/CV_MAIN_FF_EXP"
        app:riv_corner_radius="@dimen/_25sdp" />


    <me.grantland.widget.AutofitTextView
        android:id="@+id/ATV_PREVIEW_TEXT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:elevation="@dimen/_10sdp"
        android:fontFamily="@font/capriola"
        android:gravity="center"
        android:maxLines="3"
        android:text="Want to know more about Sahil? Swipe up the arrow below!"
        android:textAlignment="center"
        android:textColor="@color/preview_text_color"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/CV_MAIN_FF_EXP"
        app:layout_constraintStart_toStartOf="@id/CV_MAIN_FF_EXP"
        app:layout_constraintTop_toTopOf="@id/CV_MAIN_FF_EXP"
        app:sizeToFit="true" />

