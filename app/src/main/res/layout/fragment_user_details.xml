        android:id="@+id/IV_SWIPE_ME"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:elevation="@dimen/_10sdp"
        android:src="@raw/gif_swipe_up"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/CV_MAIN_FF_EXP"
        app:layout_constraintEnd_toEndOf="@id/CV_MAIN_FF_EXP"
        app:layout_constraintStart_toStartOf="@id/CV_MAIN_FF_EXP"
        app:layout_constraintTop_toBottomOf="@id/ATV_PREVIEW_TEXT" />

    <ImageView
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/rounded_white_background"
        android:backgroundTint="#66FFFFFF"
        android:elevation="@dimen/_7sdp"
        android:padding="@dimen/_5sdp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_megaphone"
        app:layout_constraintEnd_toEndOf="@id/CV_MAIN_FF_EXP"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/CL_ABOUT_ME"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"

        android:layout_marginStart="@dimen/_20sdp"
        android:elevation="@dimen/_8sdp"
        app:layoutDescription="@xml/ff_exp_about_me_scene"
        app:layout_constraintBottom_toBottomOf="@id/V_BUTTONS_BOTTOM"
        app:layout_constraintStart_toStartOf="parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/CV_ABOUT_ME"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_50sdp"
            app:cardElevation="@dimen/_4sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_about_me" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.motion.widget.MotionLayout>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/CL_CONNECTED_PEOPLE"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:elevation="@dimen/_8sdp"
        app:layoutDescription="@xml/ff_exp_connected_people_scene"
        app:layout_constraintBottom_toBottomOf="@id/V_BUTTONS_BOTTOM"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/CV_CONNECTED_PEOPLE"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            app:cardBackgroundColor="#E6FFFFFF"
            app:cardCornerRadius="@dimen/_50sdp"
            app:cardElevation="@dimen/_4sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_connected_people" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.motion.widget.MotionLayout>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/CL_OPTIONS_FF_EXP"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:elevation="@dimen/_8sdp"
        app:layoutDescription="@xml/ff_exp_options_scene"
        app:layout_constraintBottom_toBottomOf="@id/V_BUTTONS_BOTTOM"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/CV_OPTIONS_FF_EXP"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            app:cardBackgroundColor="#E6FFFFFF"
            app:cardCornerRadius="@dimen/_50sdp"
            app:cardElevation="@dimen/_4sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingEnd="0dp"
                android:paddingBottom="@dimen/_10sdp"
                android:src="@drawable/ic_filter_opt" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.motion.widget.MotionLayout>


    <View
        android:id="@+id/V_BUTTONS_BOTTOM"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_30sdp"
        app:layout_constraintTop_toTopOf="@id/ML_DETAILS_FF_EXP" />

