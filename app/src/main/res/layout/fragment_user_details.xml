                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/V_DOT_1_BOTTOM_FF_EXP" />

        </androidx.constraintlayout.motion.widget.MotionLayout>


        <RelativeLayout
            android:id="@+id/RL_CENTER_LAYOUT_FF_EXP"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_230sdp"

            android:layout_marginBottom="@dimen/_20sdp"
            android:tag="1"
            app:layout_constraintBottom_toTopOf="@id/ML_BOTTOM_INDICATORS_FF_EXP">


            <ViewStub
                android:id="@+id/VS_FF_EXP_SET_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inflatedId="@+id/VS_SET_1"
                android:layout="@layout/layout_ff_exp_set1"
                tools:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
