<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CL_GD_RV"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:tag="not_init"
    app:layoutDescription="@xml/general_detail_scene">

    <RelativeLayout
        android:id="@+id/RL_GD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@drawable/rounded_white_background"
        android:backgroundTint="#F6F6F6"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/IV_GD"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_height" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/ATV_GD"
            android:layout_width="0dp"

            android:layout_height="0dp"
            android:layout_alignTop="@id/IV_GD"
            android:layout_alignBottom="@id/IV_GD"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_40sdp"
            android:layout_toEndOf="@id/IV_GD"
            android:fontFamily="@font/capriola"
            android:gravity="center_vertical"
            android:letterSpacing="0.05"
            android:text="Height"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/IV_ARROW_GD"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:rotation="180"
        android:src="@drawable/ic_back_ff"
        app:layout_constraintBottom_toBottomOf="@id/RL_GD"
        app:layout_constraintEnd_toEndOf="@id/RL_GD"
        app:layout_constraintTop_toTopOf="@id/RL_GD"
        app:tint="#959292" />


</androidx.constraintlayout.widget.ConstraintLayout>