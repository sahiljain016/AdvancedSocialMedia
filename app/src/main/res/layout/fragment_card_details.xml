<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED">

    <View
        android:id="@+id/TOP_VIEW"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:background="@drawable/gradient_blue_green"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/Curved_Header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170sdp"
        app:cardCornerRadius="@dimen/_30sdp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@drawable/gradient_blue_green">

            <ImageView
                android:id="@+id/CD_Show_matching_values"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:src="@drawable/ic_green_tick_round"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/CD_Heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:elevation="@dimen/_10sdp"
                android:fontFamily="@font/convergence"
                android:text="Sahil's User Card"
                android:textColor="#F0FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="@dimen/_10sdp"
        android:orientation="vertical"
        android:weightSum="100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TOP_VIEW">

        <RelativeLayout
            android:id="@+id/CD_RL_DESP"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="48"
            android:elevation="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/CD_Desp_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/convergence"
                android:text="About me:"
                android:textColor="@color/white"
                android:textSize="18sp" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/CD_RecyclerView_DESP_QA"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/CD_Desp_heading"
                android:layout_alignParentBottom="true"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:paddingBottom="@dimen/_20sdp"
                />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/CD_RL_MIDDLE"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="52"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RL_DESP">

            <TextView
                android:id="@+id/CD_Detail_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/convergence"
                android:text="Explore Interstes/Details about me "
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.gic.memorableplaces.CustomLibs.AnimatedRecyclerView.AnimatedRecyclerView
                android:id="@+id/CD_RecylerView_Details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/CD_Detail_heading"
                android:layout_marginTop="@dimen/_9sdp">


            </com.gic.memorableplaces.CustomLibs.AnimatedRecyclerView.AnimatedRecyclerView>


        </RelativeLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>