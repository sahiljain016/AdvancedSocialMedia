<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:clickable="false"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:focusableInTouchMode="false"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clickable="false"
        android:descendantFocusability="blocksDescendants"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_weight="75">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/User_images_ff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_alignParentTop="true"
            android:background="@color/white" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:descendantFocusability="blocksDescendants"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_alignParentBottom="true">


            <LinearLayout
                android:id="@+id/LinearLayout_Options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:descendantFocusability="blocksDescendants"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:orientation="horizontal">

                <com.gic.memorableplaces.utils.ShadowLayout
                    android:id="@+id/SL_PLUS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:descendantFocusability="blocksDescendants"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    app:sl_shadow_angle="90"
                    app:sl_shadow_color="#000000"
                    app:sl_shadow_distance="@dimen/_3sdp"
                    app:sl_shadow_radius="5dp">

                    <ImageButton
                        android:id="@+id/IV_PLUS"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/rounded_white_background"
                        android:backgroundTint="#FFFFFF"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_plus_sign" />
                </com.gic.memorableplaces.utils.ShadowLayout>

                <com.gic.memorableplaces.utils.ShadowLayout
                    android:id="@+id/SL_CARD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:clickable="false"
                    android:descendantFocusability="blocksDescendants"
                    android:focusable="false"
                    android:focusableInTouchMode="false"

                    app:sl_shadow_angle="90"
                    app:sl_shadow_color="@color/colorPrimaryDark"
                    app:sl_shadow_distance="@dimen/_3sdp"
                    app:sl_shadow_radius="5dp">


                    <ImageView
                        android:id="@+id/IV_CARD"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:visibility="gone"
                        android:background="@drawable/rounded_white_background"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:src="@drawable/ic_card_icon" />
                </com.gic.memorableplaces.utils.ShadowLayout>

                <com.gic.memorableplaces.utils.ShadowLayout
                    android:id="@+id/SL_Follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"

                    android:clickable="false"
                    android:descendantFocusability="blocksDescendants"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    app:sl_shadow_angle="90"
                    app:sl_shadow_color="@color/colorAccent"
                    app:sl_shadow_distance="@dimen/_3sdp"
                    app:sl_shadow_radius="5dp">

                    <!--<ImageView
                        android:id="@+id/IV_FOLLOW"
                        android:layout_width="@dimen/_42sdp"
                        android:layout_height="@dimen/_42sdp"
                        android:background="@drawable/rounded_white_background"
                        android:backgroundTint="@color/colorAccent"
                        android:src="@drawable/ic_follow"
                        android:visibility="gone" />-->


                    <ImageView
                        android:id="@+id/IV_FOLLOW_FF"
                        android:layout_width="@dimen/_42sdp"
                        android:layout_height="@dimen/_42sdp"
                        android:background="@drawable/rounded_white_background"
                        android:backgroundTint="@color/colorAccent"
                        android:scaleType="fitCenter"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:src="@drawable/ic_follow_bubble"
                        android:visibility="gone"
                        android:tag="Not Followed"

                        />
                    <com.gic.memorableplaces.CustomLibs.shinebuttonlib.ShineButton
                        android:id="@+id/SB_FOLLOW"
                        android:layout_width="@dimen/_42sdp"
                        android:layout_height="@dimen/_42sdp"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:src="@android:color/transparent"
                        app:allow_random_color="true"
                        android:visibility="gone"
                        app:btn_color="@android:color/transparent"
                        app:btn_fill_color="@android:color/transparent"
                        app:enable_flashing="true"
                        app:shine_animation_duration="3000"
                        app:siShape="@raw/followers" />
                </com.gic.memorableplaces.utils.ShadowLayout>

                <com.gic.memorableplaces.utils.ShadowLayout
                    android:id="@+id/SL_LIKE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"

                    android:clickable="false"
                    android:descendantFocusability="blocksDescendants"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    app:sl_shadow_angle="90"
                    app:sl_shadow_color="@color/home_color_3"
                    app:sl_shadow_distance="@dimen/_3sdp"
                    app:sl_shadow_radius="5dp">

                    <ImageView
                        android:id="@+id/IV_LIKE_FF"
                        android:layout_width="@dimen/_42sdp"
                        android:layout_height="@dimen/_42sdp"
                        android:background="@drawable/rounded_white_background"
                        android:backgroundTint="@color/home_color_3"
                        android:padding="@dimen/_5sdp"
                        android:visibility="gone"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_like_white" />
                </com.gic.memorableplaces.utils.ShadowLayout>

                <com.gic.memorableplaces.utils.ShadowLayout
                    android:id="@+id/SL_HI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:clickable="false"
                    android:descendantFocusability="blocksDescendants"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    app:sl_shadow_angle="90"
                    app:sl_shadow_color="@color/home_color_4"
                    app:sl_shadow_distance="@dimen/_3sdp"
                    app:sl_shadow_radius="5dp">

                    <ImageView
                        android:id="@+id/IV_HI"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:visibility="gone"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:background="@drawable/rounded_white_background"
                        android:backgroundTint="@color/home_color_4"
                        android:src="@drawable/ic_send_hi_mesage" />
                </com.gic.memorableplaces.utils.ShadowLayout>


            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CL_BOTTOM"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:background="@color/white"
        android:clickable="false"
        android:descendantFocusability="blocksDescendants"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="@dimen/_5sdp">

        <TextView
            android:id="@+id/full_name_ff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/galindo"
            android:padding="@dimen/_1sdp"
            android:text=""
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/username_ff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/username_ff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/galindo"
            android:paddingStart="@dimen/_2sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:text=""
            android:textColor="#8F8E8E"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/Show_More_Values"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/full_name_ff" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/Show_More_Values"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/oval_corner_"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/actor"
            android:visibility="gone"
            android:elevation="@dimen/_10sdp"
            android:gravity="center"
            android:padding="@dimen/_7sdp"
            android:text=""
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/BORDER_VIEW_HORIZONTAL"
            app:layout_constraintEnd_toStartOf="@+id/RL_OPTIONS_FF"
            app:layout_constraintStart_toEndOf="@id/username_ff"
            app:layout_constraintTop_toTopOf="parent"
            app:sizeToFit="true" />

        <View
            android:id="@+id/BORDER_VIEW_HORIZONTAL"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:background="@color/black"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:layout_constraintBottom_toTopOf="@id/description_ff"
            app:layout_constraintEnd_toStartOf="@id/BORDER_VIEW"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/username_ff" />

        <TextView
            android:id="@+id/description_ff"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_15sdp"
            android:drawablePadding="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/actor"
            android:maxLines="3"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:textColor="@color/black"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/BORDER_VIEW"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/username_ff" />

        <RelativeLayout
            android:id="@+id/RL_OPTIONS_FF"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <me.grantland.widget.AutofitTextView
                android:id="@+id/TV_FOLLOWING"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:text="450"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textAlignment="gravity"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/HEADING_TV_FOLLOWING"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/TV_FOLLOWING"
                android:gravity="center"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="Following"
                android:textAlignment="gravity"
                android:textColor="#595757"
                android:textSize="16sp" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/TV_FOLLOWERS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_below="@id/HEADING_TV_FOLLOWING"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center"
                android:text="450"
                android:textAlignment="gravity"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/HEADING_TV_FOLLOWERS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/TV_FOLLOWERS"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:text="Followers"
                android:textAlignment="gravity"
                android:textColor="#595757"
                android:textSize="16sp" />


        </RelativeLayout>

        <View
            android:id="@+id/BORDER_VIEW"
            android:layout_width="1dp"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_height="match_parent"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/RL_OPTIONS_FF"
            app:layout_constraintStart_toEndOf="@id/BORDER_VIEW_HORIZONTAL"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
