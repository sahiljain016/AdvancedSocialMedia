<layer-list xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="1dp">

    <item
        android:bottom="1dp"
        android:top="1dp"
        android:left="-15dp"
        android:right="-15dp">
