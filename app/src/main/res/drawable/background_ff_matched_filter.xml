<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/_45sdp"/>
            <gradient
                android:angle="45"
                android:endColor="#00FF7F"
                android:startColor="#05C6FF"
                android:type="linear" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/_45sdp"/>
            <solid android:color="#D8FFEE" />
        </shape>
    </item>

</layer-list>