<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="200px">
        <shape>

            <gradient android:gradientRadius="@dimen/_100sdp"
                android:angle="270"
                android:type="linear"
                android:centerColor="#EDCF46"
                android:endColor="#F4DB9C"
                android:startColor="#E6BC00"/>
        </shape>
    </item>

    <item android:height="10dp">

        <shape>
            <solid android:color="@color/white" />
        </shape>
    </item>

    <item
        android:bottom="500dp"
        android:left="-100dp"
        android:right="-100dp"
        android:top="-500dp">
        <shape>
            <corners android:radius="400dp" />
            <solid android:color="@color/white"/>


        </shape>
    </item>
</layer-list>